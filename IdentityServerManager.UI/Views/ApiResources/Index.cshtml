@model IEnumerable<IdentityServerManager.UI.Models.ApiResourceViewModel>
@{
    ViewData["Title"] = "Api Resources List";
}
<p>
    <a asp-action="Create" class="btn btn-primary"><i class="ti-plus"></i> Create New</a>
</p>
<div class="card">
    <div class="content table-responsive table-full-width">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Enabled)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DisplayName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            <i class="ti-@(item.Enabled ? "check text-success" :  "close text-danger")"></i>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DisplayName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-icon" data-toggle="tooltip" title="Edit"><i class="fa fa-pencil"></i></a>
                            <a href="javascript:void(0)" onclick="showDetails(@item.Id, 'ApiResources')" class="btn btn-primary btn-icon" data-toggle="tooltip" title="Details"><i class="fa fa-bars"></i></a>
                            <a href="javascript:void(0)" onclick="deleteItem(@item.Id)" class="btn btn-danger btn-icon" data-toggle="tooltip" title="Delete"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<form id="deleteForm" name="deleteForm" asp-action="Delete">
    <input type="hidden" name="Id" id="Id" />
</form>

